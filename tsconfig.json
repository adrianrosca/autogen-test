{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true
	},
	"include": ["src/**/*", "tools/**/*"],
	"exclude": ["node_modules"]
}
