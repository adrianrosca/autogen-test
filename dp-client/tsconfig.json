{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"useDefineForClassFields": true,
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
