{
	"singleQuote": true,
	"trailingComma": "all",
	"printWidth": 100,
	"tabWidth": 2,
	"semi": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"breakBeforeChainCalls": true,
	"chainCallIndentation": true,
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"options": {
				"parser": "typescript"
			}
		},
		{
			"files": ["*.scss"],
			"options": {
				"parser": "scss"
			}
		}
	]
}
